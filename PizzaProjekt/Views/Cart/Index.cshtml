@model List<string>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cart</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/cart.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<div class="cart">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-lg-4 cart__sidebar sidebar">
                <div class="container">
                    <div class="row">
                        <div class="cart__image-container">
                            <h3 class="cart__title">SCHLIESSE DEINE BESTELLUNG AB!</h3>
                            <img class="cart__image" src="~/Bilder/giphy.gif" />
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-12 col-lg-8 cart__content">
                <div class="cart__order--container">

                    @if (Model != null)
                    {
                        <ul class="order__item">
                            <h3 class="order__number">Pizza #{item.count +1}</h3>
                            <div class="col-12 col-lg-6 order__image--container">
                                <img class="order__image" src="~/Bilder/pizzabox.png" />
                            </div>
                        
                            <div class="col-12 col-lg-6 order__content--container">
                                    @foreach (var item in Model)
                                    {
                                        <li class="order__ingredient">@item</li>
                                    }
                            </div>
                        </ul>
                    }
                    else
                    {
                        <p>Keine Pizza. Was ist falsch mit dir?????</p>
                    }
                </div>
                <div class="cart__price">
                    <a class="cart__price-button" asp-controller="Cart" asp-action="Checkout">
                        <p class="button__text">11,90 ï¿½</p>
                        <div class="button__cart">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cash" viewBox="0 0 16 16">
                                <path d="M8 10a2 2 0 1 0 0-4 2 2 0 0 0 0 4" />
                                <path d="M0 4a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1zm3 0a2 2 0 0 1-2 2v4a2 2 0 0 1 2 2h10a2 2 0 0 1 2-2V6a2 2 0 0 1-2-2z" />
                            </svg>
                        </div>

                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


