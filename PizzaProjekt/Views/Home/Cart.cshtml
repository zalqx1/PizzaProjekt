@{
    ViewData["Title"] = "Cart";
}
<h1>@ViewData["Title"]</h1>

<div class="cart">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-lg-4 cart__sidebar sidebar">
                <div class="container">
                    <div class="row">
                         <div class="cart__image-container">
                            <div class="cart__image">
                                <div class="cart__pizza">
                                    <img class="pizza_base" src="Bilder/PizzaMockup.png" />

                                    <div class="cart__toppings">
                                        <img name="cheese_goat" src="Bilder/cheese_goat.png" />
                                        <img name="cheese_main" src="Bilder/cheese_main.png" />
                                        <img name="pepperoni" src="Bilder/pepperoni.png" />
                                        <img name="salami" src="Bilder/salami.png" />
                                        <img name="sucuk" src="Bilder/sucuk.png" />
                                    </div>
                            
                                </div>

                                <div class="cart__background-yellow">
                                    <img class="rotating" src="Bilder/star.png" />
                                </div>

                                <div class="cart__fresco">
                                    <img class="scaleUp" src="Bilder/Fresco.png" />
                                </div>
                            </div>
                        </div>
                

                        <div class="cart__price">
                            <button class="cart__price-button">
                                <p class="button__text">11,90€</p>
                                <div class="button__cart">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart4" viewBox="0 0 16 16">
                                        <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l.5 2H5V5zM6 5v2h2V5zm3 0v2h2V5zm3 0v2h1.36l.5-2zm1.11 3H12v2h.61zM11 8H9v2h2zM8 8H6v2h2zM5 8H3.89l.5 2H5zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0" />
                                    </svg>
                                </div>
                        
                            </button>
                        </div>
                        
                    </div>
                </div>
                
            </div>

            <div class="col-12 col-lg-8 cart__content">
               hier ist Bestellung
        </div>
    </div>
</div>


