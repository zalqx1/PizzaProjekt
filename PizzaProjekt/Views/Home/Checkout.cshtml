<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Checkout</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/checkout.css" />          
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<div class="checkout">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-lg-4 checkout__sidebar sidebar">
                <div class="container">
                    <div class="row">
                         <div class="checkout__image-container">
                             <h3 class="checkout__title">DEINE PIZZA IST AUF DEM WEG ZU DIR</h3>
                            <img class="checkout__image" src="~/Bilder/scooter.gif" />
                        </div>
                    </div>
                </div>
                
            </div>

            <div class="col-12 col-lg-8 checkout__content">
                <div class="checkout__order--container">
                

                    <div class="contact-details">
                        <div class="contact__item">
                            <p class="contact__headline">Vorname Nachname</p>
                            <input class="contact__input"></input>
                        </div>

                        <div class="contact__item">
                            <p class="contact__headline">Strasse Hausnummer</p>
                            <input class="contact__input"></input>
                        </div>

                        <div class="contact__item">
                            <p class="contact__headline">PLZ</p>
                            <input type="number" min="0" class="contact__input"></input>
                        </div>
                    
                        <div class="contact__item">
                            <p class="contact__headline">Stadt</p>
                            <input class="contact__input"></input>
                        </div>
                        <div class="contact__item">
                            <p class="contact__headline">Telefon</p>
                            <input type="number" class="contact__input"></input>
                        </div>
                    </div>

                    <div class="cart-overview">
                        <div class="contact__item overview__item">
                            <p class="contact__headline overview__headline">Bestellung:</p>
                            <div class="contact__input overview_order">Bestellung einfuegen</div>
                        </div>
                        
                        <div class="contact__item price__item">
                            <p class="contact__headline price__headline">Preis:</p>
                            <div class="contact__input price__order">Preis einfuegen</div>
                        </div>

                        <div class="checkout__button--container">
                            <button class="checkout__button">
                                <p class="button__text">BESTELLEN</p>
                                <div class="button__cart">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart4" viewBox="0 0 16 16">
                                        <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l.5 2H5V5zM6 5v2h2V5zm3 0v2h2V5zm3 0v2h1.36l.5-2zm1.11 3H12v2h.61zM11 8H9v2h2zM8 8H6v2h2zM5 8H3.89l.5 2H5zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0" />
                                    </svg>
                                </div>
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


